<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="gestion_tareas_victor.list">
      <field name="name">tareas_victor list</field>
      <field name="model">gestion_tareas_victor.tareas_victor</field>
      <field name="arch" type="xml">
        <list>
          <field name="codigo"/>
          <field name="nombre"/>
          <field name="descripcion"/>
          <field name="proyecto_ids"/>
          <field name="finalizado"/> 
        </list>
      </field>
    </record>


   <record model="ir.ui.view" id="gestion_tareas_victor.form">
      <field name="name">tareas_victor form</field>
      <field name="model">gestion_tareas_victor.tareas_victor</field>
      <field name="arch" type="xml">
        <form>
        <sheet>
          <group>
          <field name="codigo"/>
          <field name="nombre"/>
          <field name="descripcion"/>
          <field name="finalizado"/>
          <field name="proyecto_ids"/>
          <field name="historia"/>
           </group>
           <group>
            <field name="fecha_creacion"/>
            <field name="fecha_ini"/>
            <field name="fecha_fin"/>
            <field name="sprint"/>
            <field name="rel_tecnologias" widget="many2many_tags"/>
            </group>   
        </sheet>
        </form>
      </field>
    </record>
    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="gestion_tareas_victor.action_tareas_window">
      <field name="name">gestion_tareas_victor window</field>
      <field name="res_model">gestion_tareas_victor.tareas_victor</field>
      <field name="view_mode">list,form</field>
    </record>

     <record model="ir.actions.act_window" id="gestion_tareas_victor.action_sprints_window">
      <field name="name">gestion_sprints_victor window</field>
      <field name="res_model">gestion_tareas_victor.sprints_victor</field>
      <field name="view_mode">list,form</field>
    </record>

     <record model="ir.actions.act_window" id="gestion_tareas_victor.action_proyectos_window">
      <field name="name">gestion_proyectos_victor window</field>
      <field name="res_model">gestion_tareas_victor.proyectos_victor</field>
      <field name="view_mode">list,form</field>
    </record>

    <record model="ir.actions.act_window" id="gestion_tareas_victor.action_historias_window">
      <field name="name">gestion_historias_victor window</field>
      <field name="res_model">gestion_tareas_victor.historias_victor</field>
      <field name="view_mode">list,form</field>
    </record>


    <!-- Top menu item -->
    <menuitem name="Gestor Tareas" id="gestion_tareas_victor.menu_root"/>
    <!-- menu categories -->
    <menuitem name="Tareas" id="gestion_tareas_victor.tareas" parent="gestion_tareas_victor.menu_root"/>
    <menuitem name="Sprints" id="gestion_tareas_victor.sprints" parent="gestion_tareas_victor.menu_root"/>
    <menuitem name="Proyectos" id="gestion_tareas_victor.proyectos" parent="gestion_tareas_victor.menu_root"/>
    <menuitem name="Historias" id="gestion_tareas_victor.historias" parent="gestion_tareas_victor.menu_root"/>

<!--
    <menuitem name="Menu 2" id="gestion_tareas_victor.menu_2" parent="gestion_tareas_victor.menu_root"/>
-->
    <!-- actions -->
    <menuitem name="Listado Tareas" id="gestion_tareas_victor.tareas_list" parent="gestion_tareas_victor.tareas"
              action="gestion_tareas_victor.action_tareas_window"/>
    <menuitem name="Listado Sprints" id="gestion_tareas_victor.sprints_list" parent="gestion_tareas_victor.sprints"
              action="gestion_tareas_victor.action_sprints_window"/>
    <menuitem name="Listado Proyecto" id="gestion_tareas_victor.proyectos_list" parent="gestion_tareas_victor.proyectos"
              action="gestion_tareas_victor.action_proyectos_window"/>
    <menuitem name="Listado Historias" id="gestion_tareas_victor.historias_list" parent="gestion_tareas_victor.historias"
              action="gestion_tareas_victor.action_historias_window"/>
<!--
    <menuitem name="Server to list" id="gestion_tareas_victor" parent="gestion_tareas_victor.menu_2"
              action="gestion_tareas_victor.action_server"/>
-->
  </data>
</odoo>
