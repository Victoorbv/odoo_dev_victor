<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="rest_victor.list">
      <field name="name">rest_victor list</field>
      <field name="model">rest_victor.platos_victor</field>
      <field name="arch" type="xml">
        <list>
          <field name="nombre"/>
          <field name="descripcion"/>
        </list>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="rest_victor.action_window">
      <field name="name">rest_victor window</field>
      <field name="res_model">rest_victor.platos_victor</field>
      <field name="view_mode">list,form</field>
    </record>


